<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gumio_inf.android.raamemo">

    <!-- 位置情報 GPSから -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 位置情報 ネットワークから -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- これは何だろう？？？ -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_UPDATES" />

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="AA_DB_NAME"
            android:value="RaamenData.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="10" />
        <meta-data
            android:name="AA_MODELS"
            android:value="com.gumio_inf.android.raamemo.ShopItems, com.gumio_inf.android.raamemo.RaamenItems" />

        <activity android:name=".MainActivity"
                  android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DataInputActivity"></activity>
    </application>

</manifest>